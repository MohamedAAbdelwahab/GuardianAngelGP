<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_radius"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView15"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_semibold"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:text="We will send you a code via your email " />

    <EditText
        android:id="@+id/Confirm_Code"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_bg"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:fontFamily="@font/open_sans_light"
        android:foregroundTint="#FFFFFF"
        android:hint="Enter Code"
        android:inputType="textPassword"
        android:paddingLeft="6dp"
        android:textSize="14sp" />



    <Button
        android:id="@+id/submit6"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/popbtn_bg"
        android:fontFamily="@font/open_sans_light"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="#FAF8F8"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="#FFFFFF"
        android:text="Please Do Not close the popup until you enter the code "
        android:textSize="14sp" />

</LinearLayout>